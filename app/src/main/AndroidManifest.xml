<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.usuario.inventory">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".ui.inventory.InventoryApplication"
        >
        <activity
            android:name=".SplashActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.LoginViewImpl"/>
        <activity android:name=".ui.inventory.InventoryActivity"/>
        <activity android:name=".DashboardActivity"/>
        <activity android:name=".ui.product.ProductActivity"/>
        <activity android:name=".ui.dependency.DependencyActivity"/>
        <activity android:name=".ui.sector.SectorActivity"/>
        <activity android:name=".ui.prefs.GeneralSettingsActivity"/>
        <activity android:name=".ui.prefs.AccountSettingsActivity"/>
        <activity android:name=".ui.about.AboutUsActivity"/>
        <activity android:name=".ui.dependency.AddDependencyActivity"/>
    </application>

</manifest>